extends layouts/dashboard.pug

block content
    main 
        div(class="flex p-5 justify-center my-3") 
            a(class="bg-primary py-2 w-full text-white rounded-lg flex gap-2 justify-center", href="/dashboard/posts/create") 
                h1(class="font-bold") Write 
                svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
                    path(stroke-linecap='round' stroke-linejoin='round' d='M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10')
    #posts
    if posts.length > 0
        div(class="bg-gray-300 border rounded-lg mx-2 px-2 py-3 text-center text-gray-700 mt-5")
            h1(class="text-2xl font-serif")
            h2 Total number of posts
    else 
        div(class="bg-gray-300 border rounded-lg mx-2 px-2 py-3 text-center text-gray-700 mt-5")
            h1(class="text-2xl font-serif") No posts

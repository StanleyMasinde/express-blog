{
    "env": {
        "commonjs": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "arrow-parens": "error",
        "arrow-spacing": "error",
        "no-confusing-arrow":"error",
        "no-console": "warn",
        "prefer-const": "error",
        "no-var":"error",
        "no-unused-vars":"error",
        "camelcase":"error",
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}